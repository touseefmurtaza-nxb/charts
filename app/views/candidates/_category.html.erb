<%= f.label :category, :class => 'control-label col-lg-2' %>
<div class="col-lg-5">
  <%= f.text_field :name, :class => 'form-control', :placeholder => "Name"%>
</div>

<div class="form-group">
  <%= f.fields_for :subcategories do |cat| %>
      <%= render 'subcategory', f: cat %>
  <% end %>
</div>
<div class="form-group">
  <%= link_to_add_fields "Add SubCategory", f, :subcategories %>
</div>