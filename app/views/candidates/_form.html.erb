<%= form_for @candidate, :html => { :class => "form-horizontal candidate" } do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @candidate.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interview_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :interview_date, :class => 'form-control datepicker' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                candidates_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<script>
    $( function() {
        $( "input.datepicker" ).datetimepicker({
            dateFormat: "mm/dd/yy",
            altFormat: "yy-mm-dd"
        });
    } );
</script>
